---
import { REASONS } from "../../../commons/constants";
---

<section
  class="relative py-10 bg-[url('/imgs/why-choose-us.jpg')] bg-bottom bg-cover"
>
  <div class="container flex flex-col gap-20">
    <div class="flex flex-col justify-center items-center gap-3">
      <h4
        class="uppercase font-bold text-white text-2xl"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        Tại Sao ?
      </h4>
      <h2
        class="uppercase font-bold text-white text-3xl text-center"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        Nên chọn Clover CSC
      </h2>
    </div>
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-0 text-white"
    >
      {
        REASONS.map((reason, index) => (
          <div
            class="flex flex-col justify-center gap-5 lg:px-5 text-center items-center relative"
            data-aos="fade-down"
            data-aos-delay={index * 200}
          >
            <img
              src={reason.imgSrc}
              alt={reason.title}
              class="rounded-full w-[70px] h-[70px] object-cover"
            />
            <h4 class="text-xl font-bold">{reason.title}</h4>
            <p>{reason.desc}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
