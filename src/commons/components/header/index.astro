---
import Navbar from "./navbar";
import Contact from "./contact";
import classNames from "classnames";

const pathname = new URL(Astro.request.url).pathname;

const navbar_bg =
  pathname === "/"
    ? "bg-gradient-to-b from-black to-transparent"
    : "bg-gray-800";
const navbar_classes = classNames("relative h-24 z-50", navbar_bg);
---

<header class={navbar_classes}>
  <div class="container flex flex-row items-center justify-between h-full">
    <div class="flex flex-row gap-5 items-center">
      <h1>
        <img class="w-[85px] h-auto block" src="/imgs/logo.png" alt="Logo" />
      </h1>
      <p class="flex-col text-sm text-slate-300 hidden sm:flex">
        <span>Communication &</span>
        <span>Strategic</span>
        <span>Consulting</span>
      </p>
    </div>
    <Navbar client:only />
    <Contact className="hidden lg:block" />
  </div>
</header>
