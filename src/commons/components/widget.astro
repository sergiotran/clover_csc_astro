---
import classNames from "classnames";
const { title, class: className } = Astro.props;

const classes = classNames("relative px-5", className);
---

<div class={classes}>
  <div class="flex flex-col">
    <h3 class="text-2xl font-bold">{title}</h3>
    <div class="py-5">
      <slot />
    </div>
  </div>
</div>
