---
import classNames from "classnames";
const { title, class: className } = Astro.props;

const classes = classNames("relative", className);
---

<div class={classes}>
  <div class="flex flex-col gap-2">
    {title && <h3 class="text-xl font-bold m-0">{title}</h3>}
    <div>
      <slot />
    </div>
  </div>
</div>
