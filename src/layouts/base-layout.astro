---
import Header from "../commons/components/header/index.astro";
import Footer from "../commons/components/footer/index.astro";
import "../assets/styles/base.css";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- <link -->
    <!--   href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap" -->
    <!--   rel="stylesheet" -->
    <!-- /> -->
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <script is:inline src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  </head>
  <body>
    <div class="overflow-hidden">
      <Header />
      <slot />
    </div>
    <Footer />
  </body>
  <script is:inline>
    AOS.init({
      duration: 1000,
      once: true,
    });
  </script>
</html>
